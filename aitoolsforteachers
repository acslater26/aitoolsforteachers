    <script>
        // Search functionality
        function searchTools() {
            let input = document.getElementById('search').value.toLowerCase();
            let subjects = document.querySelectorAll('.subject');
            
            subjects.forEach(function(subject) {
                let subjectTitle = subject.querySelector('h2').innerText.toLowerCase();
                if (subjectTitle.includes(input) || subject.innerText.toLowerCase().includes(input)) {
                    subject.style.displayfunction searchTools() {
    let input = document.getElementById('search').value.toLowerCase();
    let subjects = document.querySelectorAll('.subject');
    
    subjects.forEach(function(subject) {
        let subjectTitle = subject.querySelector('h2').innerText.toLowerCase();
        if (subjectTitle.includes(input) || subject.innerText.toLowerCase().includes(input)) {
            subject.style.display = '';
        } else {
            subject.style.display = 'none';
        }
    });
}function submitReview() {
    event.preventDefault();
    let name = document.getElementById('name').value;
    let feedback = document.getElementById('feedback').value;

    if (name && feedback) {
        let reviewDiv = document.createElement('div');
        reviewDiv.style.border = '1px solid #ccc';
        reviewDiv.style.padding = '10px';
        reviewDiv.style.margin = '10px 0';
        
        let reviewerName = document.createElement('h4');
        reviewerName.innerText = name;

        let reviewerFeedback = document.createElement('p');
        reviewerFeedback.innerText = feedback;

        reviewDiv.appendChild(reviewerName);
        reviewDiv.appendChild(reviewerFeedback);

        document.getElementById('reviews').appendChild(reviewDiv);

        // Clear input fields
        document.getElementById('name').value = '';
        document.getElementById('feedback').value = '';
    } else {
        alert('Please fill in both your name and feedback.');
    }
}
